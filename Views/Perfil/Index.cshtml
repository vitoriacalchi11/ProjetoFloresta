@{
    ViewData["Title"] = "PERFIL";
}

<h1>
    <svg bootstrap-icon="PersonFill" width="40" height="40" color="#008932"></svg>
    @ViewData["Title"]
</h1>
<div class="container" style="margin-left:auto; margin-right:auto;">
    <div class="d-flex justify-content-center align-items-center">
        <div id="logBom">
            <form style="align-items:center">
                @Html.AntiForgeryToken()
                <div class="form-group mgf">
                    <label for="nome">NOME</label>
                    <div class="input-container">
                        <span class="icon">&#128100;</span>
                        <input type="text" style="width:400px; background-color:#C0EFD5" class="form-control" id="nome" value="@ViewData["UserName"]">
                    </div>
                </div>
                <div class="form-group mgf">
                    <label for="telefone">Telefone</label>
                    <div class="input-container">
                        <span class="icon">&#128222;</span>
                        <input type="tel" style="width:400px; background-color:#C0EFD5" class="form-control" id="telefone" value="@ViewData["PhoneNumber"]">
                    </div>
                </div>
                <div class="form-group col mgf">
                    <label for="email">E-MAIL</label>
                    <div class="input-container">
                        <span class="icon">&#9993;</span>
                        <input type="email" style="width:400px; background-color:#C0EFD5" class="form-control" id="email" value="@ViewData["Email"]" aria-describedby="emailHelp">
                    </div>
                </div>
            </form>

            <div class="form-group mgf" id="log">
                <form asp-controller="Perfil" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger ">Logout</button>
                </form>
            </div>
        </div>

        <img src="~/img/logoBolaLinha.png" alt="Logo" />
    </div>
</div>
