                                <svg bootstrap-icon="PersonGear" width="30" height="30" color="#6EB206"></svg>
                            </a>
                        </li>

                        <!-- Link para Perfil -->
                        <li class="nav-item" id="icons">
                            <a class="nav-link text-dark" asp-area="" asp-controller="PerfilF" asp-action="Index">
                                <svg bootstrap-icon="PersonFill" width="30" height="30" color="#6EB206"></svg>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
