                            <a class="nav-link text-dark" asp-area="" asp-controller="Planejamento" asp-action="Index">
                                <svg bootstrap-icon="PencilSquare" width="30" height="30" color="#6EB206"></svg>
                            </a>
                        </li>

                        <!-- Link para Suporte -->
                        <li class="nav-item" id="icons">
